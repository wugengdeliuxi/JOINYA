{
  "name": "joinya-backend",
  "version": "1.0.0",
  "description": "JOINYA Backend API Server - Vercel Serverless Functions",
  "main": "api/index.js",
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "set NODE_ENV=development && node api/index.js",
    "dev:win": "$env:NODE_ENV=\"development\"; node api/index.js",
    "dev:vercel": "vercel dev",
    "build": "echo 'No build step required'",
    "start": "set NODE_ENV=production && node api/index.js",
    "test": "set NODE_ENV=development && node test-server.js",
    "deploy": "vercel --prod"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mongoose": "^8.0.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "@vercel/node": "^3.0.7"
  },
  "devDependencies": {
    "vercel": "^32.0.0",
    "cross-env": "^7.0.3"
  },
  "keywords": [
    "vercel",
    "serverless",
    "api",
    "express",
    "joinya"
  ],
  "author": "JOINYA Team",
  "license": "MIT"
}
